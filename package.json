{
  "name": "fim-front",
  "version": "0.0.1",
  "description": "Manage the food stock in a household to limit waste and unnecessary expenses.",
  "productName": "Food Inventory Management",
  "author": "gaetan-cordonnier <gaetan.cordonnier@gmail.com>",
  "private": true,
  "scripts": {
    "lint:js": "eslint . --ext .js,.vue",
    "lint:js:fix": "eslint --ext .js,.vue --fix",
    "format": "prettier --write \"**/*.{js,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "build": "npm install && quasar build",
    "test": "echo \"See package.json => scripts for available tests.\" && exit 0",
    "test:unit": "jest --updateSnapshot --ci --reporters=default --reporters=jest-junit",
    "test:unit:ci": "jest --ci",
    "test:unit:coverage": "jest --coverage",
    "test:unit:watch": "jest --watch",
    "test:unit:watchAll": "jest --watchAll",
    "serve:test:coverage": "quasar serve test/jest/coverage/lcov-report/ --port 8788",
    "concurrently:dev:jest": "concurrently \"quasar dev\" \"jest --watch\"",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "dependencies": {
    "@quasar/cli": "^2.3.0",
    "@quasar/extras": "^1.16.8",
    "axios": "^1.6.2",
    "core-js": "^3.6.5",
    "dotenv": "^16.3.1",
    "pinia": "^2.0.11",
    "pinia-plugin-persist": "^1.0.0",
    "quasar": "^2.14.0",
    "vue": "^3.0.0",
    "vue-barcode-reader": "^1.0.3",
    "vue-i18n": "^9.0.0",
    "vue-router": "^4.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.13.14",
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@quasar/app-webpack": "^3.12.0",
    "@quasar/quasar-app-extension-testing": "^2.1.0",
    "@quasar/quasar-app-extension-testing-unit-jest": "^3.0.0-beta.5",
    "commitizen": "^4.3.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-vue": "^9.0.0",
    "eslint-webpack-plugin": "^3.1.1",
    "husky": "^8.0.3",
    "jest": "^29.2.2",
    "jest-junit": "^16.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.5.1"
  },
  "browserslist": [
    "last 10 Chrome versions",
    "last 10 Firefox versions",
    "last 4 Edge versions",
    "last 7 Safari versions",
    "last 8 Android versions",
    "last 8 ChromeAndroid versions",
    "last 8 FirefoxAndroid versions",
    "last 10 iOS versions",
    "last 5 Opera versions"
  ],
  "engines": {
    "node": ">= 18.16.1",
    "npm": ">= 9.7.2",
    "yarn": ">= 1.21.1"
  },
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  }
}
